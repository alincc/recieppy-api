type User {
    id: ID!
    firstName: String!
    lastName: String!
    email: String
    phoneNumber: String
    token: String
    recipeLists: [RecipeList]!
}

extend type Query {
    user(id: ID): User
    users: [User]!
}

input UserInput {
    firstName: String!
    lastName: String!
    email: String
}

extend type Mutation {
    updateUser(input: UserInput): User
}